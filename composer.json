{
	"name"			: "ipub/data-tables",
	"type"			: "library",
	"description"	: "DataTables datagrid implementation for Nette Framework",
	"keywords"		: ["nette", "datagrid", "datatables", "tables", "tools", "ipub", "ipublikuj"],
	"homepage"		: "https://github.com/iPublikuj/data-tables",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/data-tables/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"dataTables" : "IPub\\DataTables\\DI\\DataTablesExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.0.0",

		"nette/application"		: "~2.4",
		"nette/di"				: "~2.4",
		"nette/component-model"	: "~2.4",
		"nette/forms"			: "~2.4",
		"nette/http"			: "~2.4",
		"nette/utils"			: "~2.4",

		"latte/latte"	: "~2.4"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.4",
		"nette/mail"			: "~2.4",
		"nette/robot-loader"	: "~2.4",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev",

		"pds/skeleton"	: "^1.0"
	},

	"autoload": {
		"psr-0": {
			"IPub\\DataTables\\": "src/"
		}
	}
}
